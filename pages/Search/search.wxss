/* pages/Search/search.wxss */

.container{
  background: #21272e;
}
.searchBox{
  margin-top: 40rpx;
  height: 96rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}
.search{
  width: 578rpx;
  height: 96rpx;
  border-radius: 48px;
  background: #2d353d;
  box-sizing: border-box;
  padding: 10rpx 0 ;
  display: flex;
  flex-direction: row;
}

.iconLefts{
  line-height: 86rpx;
  padding-left: 40rpx;
  color: #fff;
  font-size: 38rpx;
}
.searchInput{
  flex: 1;
  height: 76rpx;
  display: block;
  line-height: 96rpx;
  color: #fff;
  border-top-right-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  padding: 0 30rpx;
}
.searchCancel{
  line-height: 96rpx;
  color: #8d92a5;
  font-size: 28rpx;
  padding: 0 30rpx;
}

.sortRanking{
  margin-top: 100rpx;
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.sortBox{
  font-size: 30rpx;
  color: #fff;
  line-height: 96rpx;
}
.sortRankingRightBox{
  line-height: 96rpx;
}
.CKQB{
  color: #fff;
  font-size: 24rpx;
}
.iconYou{
  font-size: 22rpx;
  color: #fff;
  padding-left: 10rpx;
}


.readContentBox{
  margin-top: 30rpx;
   margin-bottom: 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction:row; 
}
.readA{
  width: 192rpx;
  display: flex;
  flex-direction: column;
}
.readImg{
  width: 192rpx;
  height: 296rpx;
}
.name{
  font-size: 30rpx;
  color: #fff;
  padding-top: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.title{
  font-size: 26rpx;
  color: #5d637c;
  padding-top: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.searchHistory{
  margin-top: 20rpx;
   width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}

.icondel{
  font-size: 30rpx;
  color: #71768c;
  padding: 0 20rpx;
}

.historyBox{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.historyContent{
  padding: 10rpx 30rpx;
  background: #45485b;
  margin-right: 20rpx;
  border-radius: 50rpx;
  color: #fff;
}