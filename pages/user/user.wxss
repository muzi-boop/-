/* pages/user/user.wxss */

.userBoxTop {
  width: 100%;
  box-sizing: border-box;
  height: 96rpx;
  display: flex;
  justify-content: center;
  position: relative;
}

.userMy {
  color: #fff;
  line-height: 96rpx;
  font-size: 36rpx;
}

.userSet {
  position: absolute;
  right: 0;
  color: #fff;
  line-height: 96rpx;
  font-size: 32rpx;
}

.unsigninBox {
  width: 100%;
  height: 860rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

.unsignin {
  color: #fff;
  width: 400rpx;
  height: 100rpx;
  background: #0c0;
  border-radius: 20rpx;
  text-align: center;
  line-height: 100rpx;
}

/* 登录后 */

.signinBox {
  width: 100%;
  height: 240rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}

.signinBoxImg {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}

.signinBoxRight {
  position: relative;
  padding-left: 30rpx;
  flex: 1;
  height: 240rpx;
}

.signinBoxRightName {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: #fff;
}

.signinBoxRightHome {
  padding: 18rpx 0 30rpx 0;
  font-size: 28rpx;
  color: #9497ab;
  border-bottom: 1px solid #9497ab;
}

.shareBox {
  text-align: center;
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  width: 200rpx;
  height: 60rpx;
  border-radius: 10rpx;
  border: 1px solid #9497ab;
}

.shareBoxText {
  padding-left: 20rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #9497ab;
}

.shareBoxIcon {
  font-size: 24rpx;
  line-height: 60rpx;
  color: #9497ab;
}

.levelBox {
  margin-top: 40rpx;
  width: 100%;
  box-sizing: border-box;
  height: 126rpx;
  border-radius: 20rpx;
  background: #2b323b;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}

.followBox {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.followPage{
  font-size: 32rpx;
  color: #fff;
}
.follow{
  font-size: 24rpx;
  color: #75808d;
}
.fansBox {
  border-left: 1px solid #363c45;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.fansPage{
font-size: 32rpx;
  color: #fff;
}
.fans{
 font-size: 24rpx;
  color: #75808d;
}
.likeBox {
  border-left: 1px solid #363c45;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.likePage{
font-size: 32rpx;
  color: #fff;
}
.like{
 font-size: 24rpx;
  color: #75808d;
}
.personalInformationBox{
  width: 100%;
  height: 140rpx;
  border-bottom: 1px solid #333c47;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
}
.personalInformation{
  line-height: 140rpx;
  font-size: 36rpx;
  color:#dcdeea;
}
.goIcon{
  color: #dcdeea;
  line-height: 140rpx;
  font-size: 24rpx;
}
.myNews{
  line-height: 50rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  color: #fff;
  background: #fb6894;
  text-align: center;
  font-size: 24rpx;
}

.goText{
  font-size: 24rpx;
  color: #fb6894;
  padding-right: 20rpx;
}