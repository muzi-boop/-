/* pages/setbox/setbok.wxss */

.settitlebox {
  width: 100%;
  height: 96rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}

.settitleText {
  font-size: 36rpx;
  color: #fff;
  line-height: 96rpx;
}

.personalInformationBox {
  width: 100%;
  height: 140rpx;
  border-bottom: 1px solid #333c47;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
}

.personalInformation {
  line-height: 140rpx;
  font-size: 34rpx;
  color: #dcdeea;
}

.goIcon {
  color: #dcdeea;
  line-height: 140rpx;
  font-size: 24rpx;
}

.goText {
  font-size: 24rpx;
  color: #fff;
  padding-right: 20rpx;
}

.setDownBox {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #2e363f;
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.exit {
  font-size: 36rpx;
  color: #fff;
}
